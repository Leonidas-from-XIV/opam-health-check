(jbuild_version 1)

(executable
 ((name server)
  (public_name opam-serve-all)
  (flags (:standard -safe-string -w A-44-33-4 -open Containers))
  (libraries
   (tyxml
    cohttp-lwt-unix
    containers
    cmdliner
    re
    git-unix
    backend
    oca_lib))))

(rule
  (with-stdout-to config.ml
    (progn
      (echo "let name = {|opam-serve-all|}\n")
      (echo "let version = {|${version:opam-check-all}|}\n"))))
